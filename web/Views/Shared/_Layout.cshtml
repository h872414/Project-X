@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Dicom Loader</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body class="bg-dark">
    <div class="container my-3">
        <h1 class="h1 text-light my-3 text-center">Dicom Loader</h1>
        <!--Navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarNavAltMarkup">
                <div class="navbar-nav mx-5">
                    <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "nav-item nav-link active" : "nav-item nav-link")" asp-area="" asp-controller="User" asp-action="Index">Kezdőoldal </a>
                    <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "Registration" ? "nav-item nav-link active" : "nav-item nav-link")" asp-area="" asp-controller="User" asp-action="Registration">Regisztráció</a>
                    <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "SignIn" ? "nav-item nav-link active" : "nav-item nav-link")" asp-area="" asp-controller="User" asp-action="SignIn">License ellenőrzése</a>
                    <a class="nav-item nav-link" href="~/downloads/DicomLoader.zip"> Letöltés</a>
                    @if (Context.Session.GetString("_User") == UserRole.ADMIN.ToString())
                    {
                        <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "Users" ? "nav-item nav-link active" : "nav-item nav-link")" asp-area="" asp-controller="User" asp-action="Users">Felhasználók</a>

                    }
                    @if (@Context.Session.GetString("_UId") != null)
                    {
                        <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "Records" ? "nav-item nav-link active" : "nav-item nav-link")" asp-area="" asp-controller="User" asp-action="Records">Rekordok </a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="User" asp-action="Logout">Kijelentkezés </a>
                    }


                </div>
            </div>
        </nav>

        <!--/Navbar-->
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="align-bottom footer  text-light text-center">
            <p>&copy; 2020 - DicomLoaderWeb</p>
            <p>F&T Alkalmazásfejlesztés II.</p>

        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
